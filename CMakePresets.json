{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20
  },
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_VISIBILITY_PRESET": {
          "type": "STRING",
          "value": "hidden"
        },
        "CMAKE_CXX_VISIBILITY_PRESET": {
          "type": "STRING",
          "value": "hidden"
        },
        "CMAKE_VISIBILITY_INLINES_HIDDEN": {
          "type": "BOOL",
          "value": true
        },
        "CMAKE_INSTALL_PREFIX": {
          "type": "PATH",
          "value": "/usr"
        },
        "CPACK_PACKAGE_VENDOR": {
          "type": "STRING",
          "value": "Undefined"
        },
        "CPACK_SET_DESTDIR": {
          "type": "BOOL",
          "value": true
        },
        "CPACK_RESOURCE_FILE_LICENSE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/LICENSE"
        },
        "CPACK_PACKAGE_CONTACT": {
          "type": "STRING",
          "value": "nobody@nowhere.xyz"
        },
        "CPACK_DEBIAN_PACKAGE_DEBUG": {
          "type": "BOOL",
          "value": false
        },
        "CPACK_DEBIAN_FILE_NAME": {
          "type": "STRING",
          "value": "DEB-DEFAULT"
        },
        "CPACK_DEBIAN_PACKAGE_SECTION": {
          "type": "STRING",
          "value": "misc"
        },
        "CPACK_DEBIAN_PACKAGE_SHLIBDEPS": {
          "type": "BOOL",
          "value": true
        },
        "CPACK_PACKAGE_CHECKSUM": {
          "type": "STRING",
          "value": "SHA256"
        },
        "CPACK_STRIP_FILES": {
          "type": "BOOL",
          "value": true
        },
        "CPACK_THREADS": {
          "type": "STRING",
          "value": "0"
        },
        "CPACK_PACKAGE_DIRECTORY": {
          "type": "PATH",
          "value": "${sourceDir}/$penv{DEVCONTAINER_BUILD_PREFIX}package"
        },
        "CMAKE_INSTALL_MESSAGE": {
          "type": "STRING",
          "value": "LAZY"
        }
      }
    },
    {
      "name": "arm-linux-gnueabihf",
      "displayName": "GCC for the armhf architecture",
      "inherits": "common",
      "toolchainFile": "${sourceDir}/cmake/arm-linux-gnueabihf.toolchain.cmake",
      "binaryDir": "${sourceDir}/$penv{DEVCONTAINER_BUILD_PREFIX}build",
      "cacheVariables": {
        "GREETING_MSG": {
          "type": "STRING",
          "value": "Hello, ${presetName}"
        }
      }
    },
    {
      "name": "arm-none-linux-gnueabihf",
      "displayName": "ARM GNU Toolchain targeted to Raspberry Pi",
      "inherits": "common",
      "toolchainFile": "${sourceDir}/cmake/arm-none-linux-gnueabihf.toolchain.cmake",
      "binaryDir": "${sourceDir}/$penv{DEVCONTAINER_BUILD_PREFIX}build",
      "cacheVariables": {
        "GREETING_MSG": {
          "type": "STRING",
          "value": "Hello, ${presetName}"
        }
      }
    },
    {
      "name": "armv6-unknown-linux-gnueabihf",
      "displayName": "CLang targeted to Raspberry Pi",
      "inherits": "common",
      "toolchainFile": "${sourceDir}/cmake/armv6-unknown-linux-gnueabihf.toolchain.cmake",
      "binaryDir": "${sourceDir}/$penv{DEVCONTAINER_BUILD_PREFIX}build",
      "cacheVariables": {
        "GREETING_MSG": {
          "type": "STRING",
          "value": "Hello, ${presetName}"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "common",
      "hidden": true,
      "jobs": 0,
      "verbose": true
    },
    {
      "name": "arm-linux-gnueabihf",
      "displayName": "GCC for the armhf architecture",
      "inherits": "common",
      "configurePreset": "arm-linux-gnueabihf"
    },
    {
      "name": "arm-none-linux-gnueabihf",
      "displayName": "ARM GNU Toolchain targeted to Raspberry Pi",
      "inherits": "common",
      "configurePreset": "arm-none-linux-gnueabihf"
    },
    {
      "name": "armv6-unknown-linux-gnueabihf",
      "displayName": "CLang targeted to Raspberry Pi",
      "inherits": "common",
      "configurePreset": "armv6-unknown-linux-gnueabihf"
    }
  ],
  "testPresets": [
    {
      "name": "common",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 0,
        "timeout": 30
      }
    },
    {
      "name": "arm-linux-gnueabihf",
      "displayName": "GCC for the armhf architecture",
      "inherits": "common",
      "configurePreset": "arm-linux-gnueabihf"
    },
    {
      "name": "arm-none-linux-gnueabihf",
      "displayName": "ARM GNU Toolchain targeted to Raspberry Pi",
      "inherits": "common",
      "configurePreset": "arm-none-linux-gnueabihf"
    },
    {
      "name": "armv6-unknown-linux-gnueabihf",
      "displayName": "CLang targeted to Raspberry Pi",
      "inherits": "common",
      "configurePreset": "armv6-unknown-linux-gnueabihf"
    }
  ],
  "packagePresets": [
    {
      "name": "common",
      "hidden": true
    },
    {
      "name": "arm-linux-gnueabihf",
      "displayName": "GCC for the armhf architecture",
      "inherits": "common",
      "configurePreset": "arm-linux-gnueabihf"
    },
    {
      "name": "arm-none-linux-gnueabihf",
      "displayName": "ARM GNU Toolchain targeted to Raspberry Pi",
      "inherits": "common",
      "configurePreset": "arm-none-linux-gnueabihf"
    },
    {
      "name": "armv6-unknown-linux-gnueabihf",
      "displayName": "CLang targeted to Raspberry Pi",
      "inherits": "common",
      "configurePreset": "armv6-unknown-linux-gnueabihf"
    }
  ]
}